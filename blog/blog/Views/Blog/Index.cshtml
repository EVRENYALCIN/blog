@model IEnumerable<blog.Models.Blog>
@{
    ViewData["Title"] = "Author";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>
                    @if(item.IsPublish)
                    {
                        <a class="btn btn-success">Yayinlandi</a>
                    }else{
                        <a class="btn btn-light" asp-route-id="@item.Id" asp-action="Publish">Yayinla</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

